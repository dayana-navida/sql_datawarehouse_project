/*
Procedure  : silver.load_silver
Layer      : Silver
==============Stored Procedure: Load Silver Layer (Bronze -> Silver)===========
Script Purpose:
This stored procedure performs the ETL (Extract, Transform, Load) process to
populate the 'silver' schema tables from the 'bronze' schema.
Actions Performed:
            - Truncates Silver tables.
             Build The Bronze Layer: Data
            
             - Inserts transformed and cleansed data from Bronze into Silver tables.
Parameters:
None.
This stored procedure does not accept any parameters or return any values.

About:
- Loads cleaned data from Bronze into Silver tables
- Using truncate + insert since this is a full reload
- Added basic timing prints to understand which table takes time
- Wrapped in transaction to avoid partial loads if anything fails

Usage Example:
--To execute silver stored procedure
EXEC silver.load_silver;
*/

CREATE OR ALTER PROCEDURE silver.load_silver
AS
BEGIN

    -- used for measuring execution time during loads
    DECLARE 
        @start_time DATETIME,
        @end_time DATETIME,
        @batch_start_time DATETIME,
        @batch_end_time DATETIME;

    SET @batch_start_time = GETDATE();
    PRINT 'Silver load started';

    BEGIN TRY
        BEGIN TRANSACTION;

        /* =========================
           silver.CUST_AZ12
           cleaned customer ids, dob and gender
        ========================= */
        SET @start_time = GETDATE();

        PRINT 'Truncating silver.CUST_AZ12';
        TRUNCATE TABLE silver.CUST_AZ12;

        PRINT 'Loading silver.CUST_AZ12';
        INSERT INTO silver.CUST_AZ12 (CID, BDATE, GEN)
        SELECT
            -- Remove 'NAS' prefix from customer ID if present
            CASE WHEN CID LIKE 'NAS%' THEN SUBSTRING(CID,4,LEN(CID)) ELSE CID END,

            -- Remove future birth dates
            CASE WHEN BDATE > GETDATE() THEN NULL ELSE BDATE END,

            -- Standardize gender values
            CASE 
                WHEN UPPER(TRIM(GEN)) IN ('F','FEMALE') THEN 'Female'
                WHEN UPPER(TRIM(GEN)) IN ('M','MALE') THEN 'Male'
                ELSE 'n/a'
            END
        FROM bronze.CUST_AZ12;

        SET @end_time = GETDATE();
        PRINT 'silver.CUST_AZ12 loaded in ' +
              CAST(DATEDIFF(SECOND,@start_time,@end_time) AS VARCHAR) + ' sec';


        /* =========================
           silver.cust_info
           keeping latest record per customer
        ========================= */
        SET @start_time = GETDATE();

        PRINT 'Truncating silver.cust_info';
        TRUNCATE TABLE silver.cust_info;

        PRINT 'Loading silver.cust_info';
        INSERT INTO silver.cust_info
        (cst_id, cst_key, cst_firstname, cst_lastname,
         cst_marital_status, cst_gndr, cst_create_date)
        SELECT 
            cst_id,
            cst_key,
            TRIM(cst_firstname),
            TRIM(cst_lastname),

            -- Map marital status codes to descriptive values
            CASE
                WHEN UPPER(TRIM(cst_marital_status)) = 'M' THEN 'Married'
                WHEN UPPER(TRIM(cst_marital_status)) = 'S' THEN 'Single'
                ELSE 'n/a'
            END,

             -- Standardize gender
            CASE
                WHEN UPPER(TRIM(cst_gndr)) = 'M' THEN 'Male'
                WHEN UPPER(TRIM(cst_gndr)) = 'F' THEN 'Female'
                ELSE 'n/a'
            END,
            cst_create_date
        FROM (

            -- Select only the latest record per customer
            SELECT *,
                   ROW_NUMBER() OVER (
                       PARTITION BY cst_id
                       ORDER BY cst_create_date DESC
                   ) AS flag
            FROM bronze.cust_info
            WHERE cst_id IS NOT NULL
        ) t
        WHERE flag = 1;

        SET @end_time = GETDATE();
        PRINT 'silver.cust_info loaded in ' +
              CAST(DATEDIFF(SECOND,@start_time,@end_time) AS VARCHAR) + ' sec';


        /* =========================
           silver.LOC_A101
           basic cleanup on country and ids
        ========================= */
        SET @start_time = GETDATE();

        PRINT 'Truncating silver.LOC_A101';
        TRUNCATE TABLE silver.LOC_A101;

        PRINT 'Loading silver.LOC_A101';
        INSERT INTO silver.LOC_A101 (CID, CNTRY)
        SELECT
            -- Remove hyphens from customer ID
            REPLACE(CID,'-',''),
            -- Standardize country values
            CASE 
                WHEN TRIM(CNTRY) = 'DE' THEN 'Germany'
                WHEN TRIM(CNTRY) IN ('US','USA') THEN 'United States'
                WHEN CNTRY IS NULL OR TRIM(CNTRY) = '' THEN 'n/a'
                ELSE CNTRY
            END
        FROM bronze.LOC_A101;

        SET @end_time = GETDATE();
        PRINT 'silver.LOC_A101 loaded in ' +
              CAST(DATEDIFF(SECOND,@start_time,@end_time) AS VARCHAR) + ' sec';


        /* =========================
           silver.prd_info
           product cleanup + date handling
        ========================= */
        SET @start_time = GETDATE();

        PRINT 'Truncating silver.prd_info';
        TRUNCATE TABLE silver.prd_info;

        PRINT 'Loading silver.prd_info';
        INSERT INTO silver.prd_info
        (prd_id, cat_id, prd_key, prd_nm,
         prd_cost, prd_line, prd_start_dt, prd_end_dt)
        SELECT
            prd_id,

            -- Extract category ID
            REPLACE(SUBSTRING(prd_key,1,5),'-','_'),

            -- Extract product key
            SUBSTRING(prd_key,7,LEN(prd_key)),
            prd_nm,

            -- Replace null costs with zero
            ISNULL(prd_cost,0),

            -- Map product line codes
            CASE UPPER(TRIM(prd_line))
                WHEN 'M' THEN 'Mountain'
                WHEN 'R' THEN 'Road'
                WHEN 'S' THEN 'Sports'
                WHEN 'T' THEN 'Touring'
                ELSE 'n/a'
            END,
            CAST(prd_start_dt AS DATE),

            -- Calculate end date as one day before next start date
            DATEADD(
                DAY,-1,
                LEAD(prd_start_dt)
                OVER (PARTITION BY prd_key ORDER BY prd_start_dt)
            )
        FROM bronze.prd_info;

        SET @end_time = GETDATE();
        PRINT 'silver.prd_info loaded in ' +
              CAST(DATEDIFF(SECOND,@start_time,@end_time) AS VARCHAR) + ' sec';


        /* =========================
           silver.PX_CAT_G1V
           direct load (no changes needed)
        ========================= */
        SET @start_time = GETDATE();

        PRINT 'Truncating silver.PX_CAT_G1V';
        TRUNCATE TABLE silver.PX_CAT_G1V;

        PRINT 'Loading silver.PX_CAT_G1V';
        INSERT INTO silver.PX_CAT_G1V (ID, CAT, SUBCAT, MAINTENANCE)
        SELECT ID, CAT, SUBCAT, MAINTENANCE
        FROM bronze.PX_CAT_G1V;

        SET @end_time = GETDATE();
        PRINT 'silver.PX_CAT_G1V loaded in ' +
              CAST(DATEDIFF(SECOND,@start_time,@end_time) AS VARCHAR) + ' sec';


        /* =========================
           silver.sales_details
           date validation + sales fixes
        ========================= */
        SET @start_time = GETDATE();

        PRINT 'Truncating silver.sales_details';
        TRUNCATE TABLE silver.sales_details;

        PRINT 'Loading silver.sales_details';
        INSERT INTO silver.sales_details
        (sls_ord_num, sls_prd_key, sls_cust_id,
         sls_order_dt, sls_ship_dt, sls_due_dt,
         sls_sales, sls_quantity, sls_price)
        SELECT
            sls_ord_num,
            sls_prd_key,
            sls_cust_id,

            -- Validate and convert order date
            CASE WHEN sls_order_dt <= 0 OR LEN(sls_order_dt) <> 8 THEN NULL
                 ELSE CAST(CAST(sls_order_dt AS VARCHAR) AS DATE) END,

            -- Validate and convert ship date
            CASE WHEN sls_ship_dt <= 0 OR LEN(sls_ship_dt) <> 8 THEN NULL
                 ELSE CAST(CAST(sls_ship_dt AS VARCHAR) AS DATE) END,

            -- Validate and convert due date
            CASE WHEN sls_due_dt <= 0 OR LEN(sls_due_dt) <> 8 THEN NULL
                 ELSE CAST(CAST(sls_due_dt AS VARCHAR) AS DATE) END,
            -- Recalculate sales if incorrect
            CASE
                WHEN sls_sales IS NULL
                  OR sls_sales <= 0
                  OR sls_sales <> sls_quantity * ABS(sls_price)
                THEN sls_quantity * ABS(sls_price)
                ELSE sls_sales
            END,
            sls_quantity,
            -- Fix invalid price values
            CASE
                WHEN sls_price IS NULL OR sls_price <= 0
                THEN CAST(sls_sales / NULLIF(sls_quantity,0) AS INT)
                ELSE ABS(sls_price)
            END
        FROM bronze.sales_details;

        SET @end_time = GETDATE();
        PRINT 'silver.sales_details loaded in ' +
              CAST(DATEDIFF(SECOND,@start_time,@end_time) AS VARCHAR) + ' sec';

        -- Commit all changes if everything succeeds
        COMMIT TRANSACTION;

        SET @batch_end_time = GETDATE();
        PRINT 'Silver load finished in ' +
              CAST(DATEDIFF(SECOND,@batch_start_time,@batch_end_time) AS VARCHAR)
              + ' sec';

    END TRY
    BEGIN CATCH
        IF @@TRANCOUNT > 0
            ROLLBACK TRANSACTION;

        PRINT 'Silver load failed';
        PRINT ERROR_MESSAGE();

        -- Rethrow error 
        THROW;
    END CATCH
END;



